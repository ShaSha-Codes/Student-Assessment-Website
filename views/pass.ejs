<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
    <style>
        li{
            font-size:1.1em;
        }
    </style>
  </head>
  <body>

    <div class="container">
        <h1 class="text-center" ><%=que[0].subject%></h1>
        <p style="font-size:1.5em;"><%=que[0].desc%></p>
     
    <br><br>
    <% for(let i=0;i<que[0].corans.length;i++){ %>
        <div class="card my-4" style="width: 30rem;">
            <div class="card-header" style="font-size: 1.1em; background-color:#6CA0DC;">
              Question <%=i+1%>:  <%=que[0].Question[i]%>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">A) <%=que[0].option1[i]%></li>
              <li class="list-group-item">B) <%=que[0].option2[i]%></li>
              <li class="list-group-item">C) <%=que[0].option3[i]%></li>
              <li class="list-group-item">D) <%=que[0].option4[i]%></li>
            </ul>
            <div class="card-footer" style="font-size: 1.1em;">
                Answer: <%=que[0].corans[i]%>
              </div>
              <%if(que[0].corans[i]==bod['ans'+(i+1)]){%>
              <div class="card-footer " style="font-size: 1.1em; background-color:#77DD77;">
                  <%}else{%>
                    <div class="card-footer " style="font-size: 1.1em; background-color:#FF6961">
                    <%}%>
                Your Answer: <%=bod['ans'+(i+1)]%>
              </div>
          </div>
    <% } %>
    <h2>Total Score = <%=bod.score %> / <%=que[0].corans.length%></h2>
    <a type="button" class="btn btn-primary btn-lg " href="/student/dashboard">Go Back</a>
    </div>


    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
</html>