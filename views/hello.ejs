<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
    <style>
       a {
      text-decoration:none;
      color:black;
   }
    </style>
  </head>
  <body>
    <%- include('partials/navbar.ejs') %>
    <%- include('partials/messages.ejs') %>
    <div class="card ms-auto" style="max-width: 18rem;">
      <div class="card-body">
        Course Code: <%=id%>
      </div>
    </div>
    <div class="container mx-auto" >
      <div class="row ">
          <div class="col-md-6 my-4">
              <a href=/teacher/courses/<%=id%>/uploadVideo>
                <div class="card mx-auto" style="width: 18rem;" >
                   
                    <i class="far fa-file-video fa-10x mx-auto my-5"></i>
                    <h4 class="card-title mx-auto">Upload Video</h5>
                  </div>
              </a>
          </div>
          <div class="col-md-6 my-4">
            <a href=/quiz/<%=id%>>
                <div class="card mx-auto" style="width: 18rem;">
                    <i class="far fa-question-circle fa-10x mx-auto my-5"></i>
                    <h4 class="card-title mx-auto">Upload Test</h5>
                </div>
            </a>
          </div>
        
          
      </div>
   
  </div>
  <div class="container mt-4">
  <h1 class="mb-4">Student List</h1>
  <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
        </tr>
      </thead>
      <tbody>
          <%for (var i = 0; i <list.length; i++) {%>
              <tr>
                  <th scope="row"><%=i%></th>
                  <td><%=list[i].fname%></td>
                  <td><%=list[i].lname%></td>
                  <td><%=list[i].email%></td>
                </tr>
          
          <% } %>
       
      </tbody>
    </table>
  </div>

  <div class="container mt-4"> 
    <h1 class="mb-4">Video List</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <%for(var i=0;i<vid.length;i++) {%>
        <tr>
          <th scope="row"><%= i %></th>
          <td><a  href=/video/watch/<%= vid[i].name %>><%= vid[i].title %></a></td>
          <td><%= vid[i].desc.substring(0,55)+'.....' %></td>
          <td><a type="button" class="btn btn-danger btn-sm" href=/video/delete/<%=vid[i].name%>>Delete</a></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
    
  <div class="container mt-4"> 
    <h1 class="mb-4">Quiz List</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <%for(var i=0;i<quiz.length;i++) {%>
        <tr>
          <th scope="row"><%= i %></th>
          <td><a  href=#><%= quiz[i].subject %></a></td>
          <td><a type="button" class="btn btn-success btn-sm" href=/quiz/list/<%=quiz[i].tid%>>View</a></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/f51f107350.js" crossorigin="anonymous"></script>
  </body>
</html>