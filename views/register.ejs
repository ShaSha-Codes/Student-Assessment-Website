<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <title>Hello, world!</title>
    <style type="text/css">
   a {
      text-decoration:none;
      color:black;
   }
   input{
       margin-bottom: 4%;
   }
   #fname,#lname{
       margin-bottom:0;
   }
    </style>
  </head>
  <body>
    <%- include('partials/navbar.ejs') %>
      <br><br><br>

      <div class="container mx-auto" >
          <div class="row">
              <div class="col-12">
                 
                    <div class="card mx-auto" style="max-width: 30rem;" >
                        <h1 class="card-title mx-auto mt-4"> <i class="far fa-address-card"></i> Register</h5>
                            <hr>
                          <%- include('partials/messages.ejs') %>
                        <form action="" method="POST" class="m-3">
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label for="fname" class="form-label">First Name</label>
                                    <input type="text" class="form-control" name="fname" id="fname" aria-describedby="emailHelp" value="<%= typeof fname !='undefined'?fname:'' %>" >
                                  </div>
                                  <div class="mb-3 col-md-6">
                                    <label for="lname" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" name="lname" id="lname" aria-describedby="emailHelp" value="<%= typeof lname !='undefined'?lname:'' %>">
                                  </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="dob">DOB</label>
                                <input type="date" id="dob" name="dob" class="form-control" style="max-width: 15rem;" > 
                              </div>
                            <div class="mb-3">
                              <label for="email" class="form-label">Email address</label>
                              <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" value="<%= typeof email !='undefined'?email:'' %>">
                            </div>
                            <div class="mb-3">
                              <label for="password" class="form-label">Password</label>
                              <input type="password" class="form-control" id="password" name="password" >
                            </div>
                            <div class="mb-3">
                                <label for="repassword" class="form-label">Confirm Password</label>
                                <input type="password" class="form-control" id="repassword" name="repassword">
                              </div>
                              
                            <div class="d-grid gap-2 my-3">
                                <button class="btn btn-primary" type="submit">Register</button>
                              </div>
                          </form>
                      </div>
                  <br><br>
              </div>
             
            
              
          </div>
       
      </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/f51f107350.js" crossorigin="anonymous"></script>
   
  </body>
</html>